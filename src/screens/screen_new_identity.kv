<NewIdentityScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            AutomatShortStatusPanel:
                id: state_panel
                size_hint_x: 1
                statuses: root.get_statuses()

            VEmptySpace:
                size_hint_y: 0.5

            HLayout:

                HEmptySpace:
                    size_hint_x: 0.5

                VLayout:
                    id: central_widget
                    size_hint: None, .01
                    width: self.minimum_width

	                MarkupLabel:
	                    text_size: self.size
	                    valign: "top"
	                    halign: "left"
	                    size_hint: None, None
	                    text_size: self.width, None
	                    height: self.texture_size[1]
	                    pos_hint: {'center_x': .5}
	                    width: dp(260)
	                    color: app.color_gray
	                    multiline: True
	                    text:
	                    	"""* lowercase letters: [b]a-z[/b]
	                    	* digits: [b]0-9[/b]
	                    	* minus sign: [b]-[/b]
	                    	* underscore character: [b]_[/b]
	                    	* minimum length is: [b]3[/b] characters
	                    	* maximum length is: [b]20[/b] characters"""

					VFixedEmptySpace:

	                CustomTextField:
	                    id: username_input
	                    hint_text: 'Enter your username'
	                    text: ''
	                    multiline: False
	                    pos_hint: {'center_x': .5}
	                    size_hint_x: None
	                    width: dp(220)
	                    on_key_enter_pressed: root.on_username_input_key_enter_pressed()

					VFixedEmptySpace:

	                FillRoundFlatButton:
	                    id: create_identity_button
	                    text: "[size=18sp]{}[/size]  [size=16sp][b]generate new key[/b][/size]".format(md_icon("key-variant"))
	                    md_bg_color: app.theme_cls.accent_color
	                    theme_text_color: "Custom"
	                    text_color: app.color_white99
	                    pos_hint: {'center_x': .5}
	                    on_release: root.on_create_identity_button_clicked()

	                StatusLabel:
	                    id: create_identity_result_message
	                    valign: 'bottom'
	                    halign: 'right'
	                    height: dp(20)
	                    size_hint: None, None
	                    pos_hint: {'center_x': .5}
	                    text: ""

                HEmptySpace:
                    size_hint_x: 0.5

            VEmptySpace:
                size_hint_y: 0.5

        BottomEmptyScreenSpace:
