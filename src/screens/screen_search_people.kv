<NoUsersFound>:
    size_hint: 1, None
    height: app.search_result_record_height
    pos_hint: {'left': 1}
    font_size: '16sp'


<SearchPeopleResult>:
    size_hint: 1, None
    height: app.search_result_record_height
    pos_hint: {'top': 1}
    padding: 0
    spacing: 0

    RaisedIconButton:
        icon: 'plus'
        _radius: dp(3)
        on_press: root.on_search_result_add_clicked()

    HFixedEmptySpace:
        width: dp(5)

    HFlexMarkupLabel:
        id: search_result_label
        pos_hint: {'left': 1, 'center_y': 0.5}
        font_size: '16sp'
        text: ''


<SearchPeopleScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            HorizontalContainerLayout:

                CustomTextField:
                    id: search_input
                    size_hint_x: None
                    width: dp(220)
                    hint_text: 'Enter username'
                    text: ''
                    # on_focus: root.on_search_input_focus_changed()
                    on_key_enter_pressed: root.on_search_input_key_enter_pressed()

                VerticalLayout:
                    size_hint: None, None
                    width: self.minimum_width
                    height: self.minimum_height

                    RaisedIconButton:
                        id: search_button
                        _radius: dp(3)
                        icon: 'search-web'
                        on_press: root.on_search_button_clicked()

                    Widget:
                        size_hint: None, None
                        size: dp(16), dp(16)

                Widget:
                    size_hint: None, None
                    size: dp(36), dp(16)

                VerticalLayout:
                    size_hint: None, None
                    width: self.minimum_width
                    height: self.minimum_height

                    RaisedIconButton:
                        id: search_button
                        _radius: dp(3)
                        icon: 'dice-5-outline'
                        on_press: root.on_random_button_clicked()

                    Widget:
                        size_hint: None, None
                        size: dp(16), dp(16)

            VerticalScrollView:

                PageContainerWithLeftPaddingLayout:
                    id: search_results
                    size_hint: None, None
                    width: root.width - app.scroll_bar_width
                    height: self.minimum_height
                    pos_hint: {'top': 1}
                    spacing: dp(5)

        BottomEmptyScreenSpace:

