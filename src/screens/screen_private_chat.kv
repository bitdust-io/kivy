<PrivateChatScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            AutomatShortStatusPanelByIndex:
                id: state_panel
                size_hint_x: 1
                statuses: root.get_statuses()

            VerticalScrollView:
                id: chat_messages_view

                ChatContainerLayout:
                    id: chat_messages
                    size_hint_x: None
                    width: root.width - app.scroll_bar_width

            HorizontalLayout:
                size_hint: 1, None
                height: self.minimum_height
                pos_hint: {'bottom': 1}
                padding: [dp(0), dp(0), dp(110), dp(0), ]

                DynamicHeightTextInput:
                    id: chat_input
                    size_hint_x: 1
                    text: ''

        BottomEmptyScreenSpace:


    DropDownMenu:
        id: drop_down_menu
        data:
            [('account-plus', 'Add contact', ),
            ('trash-can-outline', 'Delete contact', ),]
        callback: root.on_drop_down_menu_item_clicked
