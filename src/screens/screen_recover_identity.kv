<RecoverIdentityScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            AutomatShortStatusPanel:
                id: state_panel
                size_hint_x: 1
                statuses: root.get_statuses()

            VEmptySpace:
                size_hint_y: 0.5

	        HLayout:

                HEmptySpace:
                    size_hint_x: 0.1

                VLayout:
	                size_hint: 1, 1

	                MarkupLabel:
	                    size_hint_y: None
	                    text_size: self.width, None
	                    height: self.texture_size[1]
	                    color: app.color_gray
	                    text: "To recover your BitDust identity, you will need a backup copy of your private key and one of your IDURL addresses."

					VFixedEmptySpace:

	                MarkupLabel:
	                    size_hint_y: None
	                    text_size: self.width, None
	                    height: self.texture_size[1]
	                    color: app.color_gray
	                    text: "Paste the IDURL address and the private key below or load a backup copy from a text file."

					VFixedEmptySpace:

                    HFlexMarkupLabel:
	                    pos_hint: {'center_x': 0.5}
                        text: '[u][color=#0000ff][ref=link]load private key[/ref][/color][/u]'
                        on_ref_press: root.on_load_private_key_pressed()

                    TextInput:
                        id: private_key_input
                        multiline: True
                        text: ''
                        halign: 'left'
                        text_size: self.size
	                    width: dp(320)
                        height: dp(160)
                        size_hint: 1, None
					    font_name: 'RobotoMono-Regular'
					    font_size: '12sp'

					VFixedEmptySpace:

	                FillRoundFlatButton:
	                    id: recover_identity_button
	                    text: "[size=18sp]{}[/size]  [size=16sp][b]recover identity[/b][/size]".format(md_icon("lock-open-variant"))
	                    md_bg_color: app.theme_cls.accent_color
	                    theme_text_color: "Custom"
	                    text_color: app.color_white99
	                    pos_hint: {'center_x': .5}
	                    on_release: root.on_start_recover_identity_button_clicked()

					VFixedEmptySpace:

	                StatusLabel:
	                    id: recover_identity_result_message
	                    halign: 'center'
	                    text: ""
	                    color: app.color_gray
	                    pos_hint: {'center_x': .5}

		            VEmptySpace:
		                size_hint_y: 0.5

                HEmptySpace:
                    size_hint_x: 0.1

            VEmptySpace:
                size_hint_y: 0.5

        BottomEmptyScreenSpace:

