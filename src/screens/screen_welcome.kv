<WelcomeScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            AutomatShortStatusPanel:
                id: state_panel
                size_hint_x: 1
                statuses: root.get_statuses()

            VEmptySpace:
                size_hint_y: 0.5

            HLayout:
                size_hint: 1, .01

                HEmptySpace:
                    size_hint_x: 0.5

                VLayout:
                    id: central_widget
                    size_hint: None, .01
                    width: self.minimum_width

					CircularProgressBar:
						id: spinner
						size_hint: (None, None)
						size: dp(100), dp(100)
                        halign: 'center'
                        pos_hint: {'center_x': .5}
                        max: 360

                HEmptySpace:
                    size_hint_x: 0.5

            VEmptySpace:
                size_hint_y: 0.5

        BottomEmptyScreenSpace:
