<WelcomeScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            AutomatShortStatusPanel:
                id: state_panel
                size_hint_x: 1
                statuses: root.get_statuses()

            VEmptySpace:
                size_hint_y: 0.5

            HLayout:
                size_hint: 1, .01

                HEmptySpace:
                    size_hint_x: 0.5

                VLayout:
                    id: central_widget
                    size_hint: None, .01
                    width: self.minimum_width

                    HFlexMarkupLabel:
                        halign: 'center'
                        text: '[size=26sp]Welcome to BitDust[/size]'
                        pos_hint: {'center_x': .5}

                    VEmptySpace:
                        size_hint_y: None
                        height: dp(20)

                HEmptySpace:
                    size_hint_x: 0.5

            VEmptySpace:
                size_hint_y: 0.5

        BottomEmptyScreenSpace:
