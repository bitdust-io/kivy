<YesNoPopup>:
    cols: 1

    Label:
        pos_hint: {'center_x': .5}
        valign: 'middle'
        halign: 'center'
        text: root.label

    GridLayout:
        cols: 2
        size_hint_y: None
        height: '44sp'

        Button:
            text: 'Yes'
            on_release: root.dispatch('on_answer','yes')

        Button:
            text: 'No'
            on_release: root.dispatch('on_answer', 'no')


<InputTextContent>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDLabel:
        text: root.text_content

    MDTextField:
    	id: text_input
        size_hint_x: None
        width: "280dp"
        required: True
        mode: "rectangle"


<InputNumberContent>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDLabel:
        text: root.text_content

    MDTextField:
    	id: number_input
        size_hint_x: None
        width: "100dp"
        max_text_length: root.max_text_length
        input_filter: 'int'
        required: True
        mode: "rectangle"
